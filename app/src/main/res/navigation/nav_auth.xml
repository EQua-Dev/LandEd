<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/signUp"
        android:name="com.androidstrike.landed.ui.auth.SignUp"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUp_to_signIn"
            app:destination="@id/signIn" />
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.androidstrike.landed.ui.auth.SignIn"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signIn_to_forgotPassword"
            app:destination="@id/forgotPassword" />
        <action
            android:id="@+id/action_signIn_to_signUp"
            app:destination="@id/signUp" />

    </fragment>
    <fragment
        android:id="@+id/forgotPassword"
        android:name="com.androidstrike.landed.ui.auth.ForgotPassword"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPassword_to_signIn"
            app:destination="@id/signIn" />
    </fragment>

    <fragment
        android:id="@+id/splash"
        android:name="com.androidstrike.landed.ui.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_signIn"
            app:destination="@id/signIn" />
        <action
            android:id="@+id/action_splash_to_signUp"
            app:destination="@id/signUp" />
    </fragment>
</navigation>