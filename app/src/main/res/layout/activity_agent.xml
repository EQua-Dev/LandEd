<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Agent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="4dp"
        android:background="@color/darkgray"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/silver"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/oops_image"
                app:civ_border_color="@color/black"
                app:civ_border_width="0.5dp"
                android:id="@+id/artisan_img"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/agent_name"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/agent_xp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp"
                android:gravity="center_horizontal"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                android:background="@color/blue"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@color/gainsboro">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/agent_email"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_margin="16dp"
                        android:padding="12dp"
                        app:drawableEndCompat="@drawable/ic_baseline_contact_mail_24"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/agent_phone"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_margin="16dp"
                        android:padding="12dp"
                        app:drawableEndCompat="@drawable/ic_baseline_contact_phone_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/agent_firm"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_margin="16dp"
                        android:padding="12dp"
                        app:drawableEndCompat="@drawable/ic_baseline_location_city_24" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>